{
  "manifest_version": 2,

  "name": "Submote",
  "description": "Use any sub emote on Twitch",
  "version": "1.1.2",
  "author": "Petter Kraab√∏l",
  "browser_action": {
    "default_icon": "img/icon128.png"
  },

  "icons": { "16": "img/icon16.png",
             "48": "img/icon48.png",
            "128": "img/icon128.png" },

  "permissions": [
     "http://www.twitch.tv/*",
     "activeTab",
     "tabs",
     "webNavigation"
  ],

  "content_scripts": [
    {
      "matches": ["http://www.twitch.tv/*"],
      "js": ["jquery.js", "script.min.js"]
    }
  ],

   "background": {
    "scripts": ["jquery.js", "script.min.js"]
  }
}